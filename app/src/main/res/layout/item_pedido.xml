<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/BasicStyleElementRecicleView2">

    <TextView
        android:id="@+id/txt_codinternopedido"
        android:layout_width="190dp"
        android:layout_height="18dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:text="Código:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_numeroped"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_numeroped"
        android:layout_width="168dp"
        android:layout_height="17dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp"
        android:text="Nº:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_codinternopedido"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_codclienteped"
        android:layout_width="274dp"
        android:layout_height="19dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="8dp"
        android:text="Cliente"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_codinternopedido" />

    <TextView
        android:id="@+id/txt_nombrecliente"
        android:layout_width="377dp"
        android:layout_height="43dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:alpha="0.75"
        android:text="nombre"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_codclienteped" />

    <TextView
        android:id="@+id/txt_montonetoped"
        android:layout_width="199dp"
        android:layout_height="19dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:text="Monto neto:"
        android:textColor="#009688"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombrecliente" />

    <TextView
        android:id="@+id/txt_montonetodcto"
        android:layout_width="199dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="Monto con Dscto: "
        android:textColor="#2196F3"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_montonetoped" />

    <TextView
        android:id="@+id/txt_estatusped"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:text="Estatus:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_montonetoped"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombrecliente" />

    <TextView
        android:id="@+id/txt_fechapedcreado"
        android:layout_width="373dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:text="Fecha de Creación:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_montonetodcto" />
</androidx.constraintlayout.widget.ConstraintLayout>