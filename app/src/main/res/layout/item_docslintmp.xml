<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pidtmp"
        android:layout_width="185dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="48dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_codlineatmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="codigo"
        android:textColor="#131313"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desclineatmp"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:layout_marginStart="31dp"
        android:text="Descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pidtmp" />

    <TextView
        android:id="@+id/tv_mtolineatmp"
        android:layout_width="149dp"
        android:layout_height="22dp"
        android:layout_marginStart="31dp"
        android:text="Monto:"
        android:textColor="#1E1E1E"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desclineatmp" />

    <TextView
        android:id="@+id/tv_cantlineatmp"
        android:layout_width="183dp"
        android:layout_height="21dp"
        android:layout_marginTop="1dp"
        android:text="Cantidad ped:"
        android:textAlignment="viewEnd"
        android:textColor="#222222"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_mtolineatmp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desclineatmp" />

    <TextView
        android:id="@+id/tv_cantdevol"
        android:layout_width="183dp"
        android:layout_height="21dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="3dp"
        android:background="#D3D3D3"
        android:text="A devolver:"
        android:textAlignment="viewEnd"
        android:textColor="#222222"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cantlineatmp" />
</androidx.constraintlayout.widget.ConstraintLayout>