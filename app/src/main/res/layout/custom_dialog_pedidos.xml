<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:theme="@style/AppTheme"
    style="@style/BackgroundAux">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Mensaje del sistema"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Por favor, elige una opciÃ³n"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnVer"
        style="@style/AlertDialogCustomLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Pedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

    <Button
        android:id="@+id/btnModificar"
        style="@style/AlertDialogCustomLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Pedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVer" />

    <Button
        android:id="@+id/btnEliminar"
        style="@style/AlertDialogCustomLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Pedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModificar" />

    <Button
        android:id="@+id/btnPdf"
        style="@style/AlertDialogCustomLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar PDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEliminar" />

</androidx.constraintlayout.widget.ConstraintLayout>