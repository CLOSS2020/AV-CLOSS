<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CXCActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbt_addcxc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:background="#2196F3"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#F1F1F1"
        app:srcCompat="@drawable/ic_add_plus"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_addcxc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Nueva precobranza"
        android:text="Recibo de Cobro"
        android:visibility="invisible"
        app:backgroundTint="#BFD5E4"
        app:layout_constraintBottom_toTopOf="@+id/fbt_addcxc"
        app:layout_constraintEnd_toEndOf="@+id/fbt_addcxc" />-->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_adddeposit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Anexo Deposito"
        android:text="Nuevo Deposito"
        android:visibility="invisible"
        app:backgroundTint="#BFD5E4"
        app:layout_constraintBottom_toTopOf="@+id/fbt_addcxc"
        app:layout_constraintEnd_toEndOf="@+id/fbt_addcxc" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cxc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>